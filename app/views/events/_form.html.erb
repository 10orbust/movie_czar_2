<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tsar_id %>
    <%= form.select :tsar_id, User.all.collect { |p| [ p.first_name, p.id ] } , { include_blank: 'Please choose' } %>
  </div>

  <div class="field">
    <%= form.label :movie_watched %>
    <%= form.text_field :movie_watched %>
  </div>

  <div class="field">
    <%= form.label :custom_message %>
    <%= form.text_field :custom_message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
