<p id="notice"><%= notice %></p>

<h1>Groups</h1>
<h5><%= link_to 'Create a new group', new_group_path %></h5>

<table class = "table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Address</th>
      <th>Photo</th>
      <th>First Event</th>
      <th>Repeats every</th>   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
       
        <td><%= link_to group.title, group %></td>
        <td><%= group.description %></td>
        <td><%= group.address %></td>
        <td><img src=<%= group.photo %>></td>
        <td><%= group.event_start.strftime("%a %b %e") %></td>
        <td><%= group.repeats_every.capitalize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


